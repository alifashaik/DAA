#include<stdio.h>
#include<stdlib.h>
int eval(int l,int u){
    if(l==-1 && u==-1)
        return -1;
    else if(l==-1)
        return u;
    else if(u==-1)
        return l+1;
    else{
        if(l+1>u)
            return u;
        else
            return l+1;
    }
}
int coinChange(int* coins, int coinsSize, int amount){
    int i,j;
    if(amount==0)
    return 0;
    int b[coinsSize][amount+1];
    for(i=0;i<coinsSize;i++){
        for(j=0;j<=amount;j++){
            if(i==0){
                if(j%coins[i]==0)
                    b[i][j]=j/coins[i];
                else
                    b[i][j]=-1;
            }
            else{
                if(j<coins[i])
                    b[i][j]=b[i-1][j];
                else{
                    int l=b[i][j-coins[i]];
                    int u=b[i-1][j];
                    b[i][j]=eval(l,u);
                    }
                }
            }
        }
        return b[coinsSize-1][amount];
}

int main()
{
    int coins[3]={1,2,5};
    int amount=11;
    int n=coinChange(coins,3,amount);
    printf("%d",n);
}
